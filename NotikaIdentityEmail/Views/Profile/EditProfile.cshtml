@model UserEditViewModel
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Profilini Düzenle</h2>
                        <p>Lütfen bilgilerinizi eksiksiz ve doğru olarak güncelleme yapınız.</p>
                    </div>
                    <form method="post">
                        <div class="row">
                           
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="City" class="form-control" placeholder="Şehriniz">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Fotoğraf url bilgisi">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı adınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Email" class="form-control" placeholder="Email Adresiniz">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Telefonunuz">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Password" class="form-control" placeholder="Şifreniz">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="PasswordConfirm" class="form-control" placeholder="Tekrar Şifre">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <button class="btn btn-success">Bilgileri Güncelle</button>
                                    </div>
                                </div>
                            </div>
                          
                        </div>
                    </form>
                 
                  
                </div>
            </div>
        </div>
      
    </div>
</div>

