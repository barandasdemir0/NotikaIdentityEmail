@model SimpleUserViewModel
@{
    ViewData["Title"] = "Generate";
    Layout = "~/Views/UserLayout/Index.cshtml";
}

<div class="form-element-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-element-list">
                    <div class="basic-tb-hd">
                        <h2>Token Oluşturma </h2>
                        <p>Parametreleri Girerek Token Oluşturabilirsiniz.</p>
                    </div>
                    <form method="post">
                        <div class="row">

                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Name" class="form-control" placeholder="Adınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınız">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="City" class="form-control" placeholder="Şehriniz">
                                    </div>
                                </div>
                            </div>
                          
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <input type="text" asp-for="Username" class="form-control" placeholder="Kullanıcı adınız">
                                    </div>
                                </div>
                            </div>
                     
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <div class="nk-int-st">
                                        <button class="btn btn-success">Token Oluştur</button>
                                    </div>
                                </div>
                            </div>
                             @if (!string.IsNullOrEmpty(Model?.Token))
                                {
                                    <div class="alert-validate alert-success mt-3">
                                        <strong>Token: </strong><br />
                                        <textarea rows="5" class="form-control">@Model.Token</textarea>
                                    </div>
                                }
                        </div>
                    </form>


                </div>
            </div>
        </div>

    </div>
</div>
